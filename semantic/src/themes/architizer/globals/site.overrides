/*******************************
        Global Overrides
*******************************/

/* Architizer Glyphs
   ========================================================================== */
@font-face {
  font-family: 'Architizer Glyphs';
  src: url('http://scdn.architizer.com/fonts/glyphs/architizerglyphs-regular-webfont.eot');
  src: url('http://scdn.architizer.com/fonts/glyphs/architizerglyphs-regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('http://scdn.architizer.com/fonts/glyphs/architizerglyphs-regular-webfont.woff') format('woff'),
       url('http://scdn.architizer.com/fonts/glyphs/architizerglyphs-regular-webfont.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

